
@model List<ToDoList>
@{
	int count = 0;
}


<div class="col-md-6">
	<div class="card card-tasks" style="height:20em; overflow:auto;">
		<div class="card-header ">
			<h4 class="card-title">Yapılacaklar</h4>
		</div>
			<div class="card-body">
			   <div class="table-full-width">
					 <table class="table">
					@if (Model !=null)
					{
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">İçerik</th>
								<th scope="col">Tarih</th>
								<th scope="col">Durum</th>
							</tr>
						</thead>
						<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.Date.ToString("dd MMM yyyy")</td>
										@if (item.Status == false)
										{

										<td><a href="/ToDoList/ChangeToDoListStatusToTrue/@item.ToDoListId" class="btn btn-outline-info btn-sm"><i class="la la-check"></i></a></td>
										}
									</tr>
								}
						</tbody>
						
					}
					else
					{
						<p class="text-center">Henüz yeni bir hatırlatıcınız yok.</p>
					}

					</table>
					</div>
					</div>
	</div>
</div>


