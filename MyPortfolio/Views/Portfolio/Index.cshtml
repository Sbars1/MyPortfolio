@model List<Portfolio>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Layout/Index.cshtml";
	int count = 0;
}
<style>
	.portfolio-img {
		width: 50px;
		height: 50px;
		border-radius: 50%; /* Daire şeklini verir */
		object-fit: fill; /* Görselin daireye sığmasını sağlar */
	}
</style>
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Portfolyo</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Portfolyo Listesi</div>
					</div>
					<div class="card-body">
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Alt Başlık</th>
									<th scope="col">Görsel</th>
									<th scope="col">Link</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@item.PortfolioId</td>
										<td>@item.Title</td>
										<td>@item.SubTitle</td>
										<td>
											<img src="@item.ImageUrl" class="portfolio-img" alt="Project Image">
										</td>
										<td>@item.Url</td>
										<td>@item.Description</td>
										<td><a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-danger ">Sil</a></td>
										<td><a href="/Portfolio/UpdatePortfolio/@item.PortfolioId" class="btn btn-success ">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<td><a href="/Portfolio/CreatePortfolio/" class="btn btn-primary ">Yeni Proje Ekle</a></td>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>
